{
  "preset": "ts-jest/presets/js-with-babel",
  "moduleFileExtensions": ["js", "json", "ts"],
  "transformIgnorePatterns": ["/node_modules/(?![@polymeshassociation/src]).+\\.js$"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",

  "moduleNameMapper": {
    "~/(.*)": "<rootDir>/../src/$1"
  },
  "testTimeout": 30000
}
